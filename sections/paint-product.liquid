{{ 'section-paint-product.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{%- endstyle -%}
<section class="paint-product isolate section-{{ section.id }}-padding section section-primary section-wrapper">
    <div class="paint-product__main page-width">
        <div class="paint-product__heading">
            <h2>{{section.settings.heading}}</h2>
        </div>
        <div class="paint-product__card-wrapper">
        <div class="paint-product__card card-section">
            <div class="card-section__heading">
                <h3>{{section.settings.heading1}} <a href="#">{% render 'arrow-dotted-black' %}</a></h3>
            </div>
            <div class="paint-product__card-content">
            <div class="card-section__para">
             {{section.settings.para}}
            </div>
            <div class="card-section__image">
                <img src="{{section.settings.image1 | img_url: 'medium'}}" alt="image">
            </div>
          </div>
        </div>
        <div class="paint-product__card card-section">
            <div class="card-section__heading">
                <h3>{{section.settings.heading2}} <a href="#">{% render 'arrow-dotted-black' %}</a></h3>
            </div>
            <div class="paint-product__card-content">
            <div class="card-section__para">
               {{section.settings.para2}}
            </div>
            <div class="card-section__image">
                <img src="{{section.settings.image2 | img_url: 'medium'}}" alt="image">
            </div>
        </div>
      </div>
      </div>
    </div>    
</section>

{% schema %}
{
   "name": "card section",
  "settings": [
      {
         "type": "text",
         "id": "heading",
         "label": "Heading"
      },
      {
        "type": "text",
        "id": "heading1",
        "label": "Heading card 1"
     },
     {
       "type": "html",
       "id": "para",
       "label": "para card 1"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "image card 1"
   },
   {
     "type": "text",
     "id": "heading2",
     "label": "Heading card 2"
  },
  {
    "type": "html",
    "id": "para2",
    "label": "para card 2"
 },
 {
   "type": "image_picker",
   "id": "image2",
   "label": "image card 2"
},
{
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
  ],
 "presets": [
     {
         "name":"card Section"
     }
 ]
}
{% endschema %}