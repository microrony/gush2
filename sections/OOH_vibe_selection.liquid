<!-- Add the slick-theme.css if you want default styling -->
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css">




<div id="vibe_carousel" class="vibe_carousel_selection">
 
  {% for collection in collections %}
    
      {% if collection.handle contains 'vibe' %}
        <div class="vibe_class" style="background-image: url({{ collection.featured_image | img_url:"master" }}); 
	background-repeat: no-repeat;
    background-size: cover;
    margin: 0;
    height: 396px;"/>
         <h2 class="ooh_vibe_selection_title gush-font-h1">Select your vibe</h2>
          <a class="collection_button"> {{ collection.title }}</a>
        </div>
  {% endif %}
{% endfor %}

</div>




















<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script type="text/javascript">
        jQuery(document).ready(function($){
        $('.vibe_carousel_selection').slick({
          arrow: true,
  infinite: true,
  speed: 300,
  slidesToShow: 1
        });
      });
</script>

