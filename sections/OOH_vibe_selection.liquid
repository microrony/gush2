<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
<!-- Add the slick-theme.css if you want default styling -->
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css">



<style>
.vibe_class {
	background-repeat: no-repeat;
    background-size: cover;
    margin:0;
    height: 396px;
    align-items: center;
    justify-content: center;
    color: #fff;
    display: flex !important;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 3rem 0;
}
  
.slick-prev, .slick-next {
  top: 54% !important;
}
.slick-arrow.slick-prev {
  left: 50px;
  background: url("https://cdn.shopify.com/s/files/1/0614/1470/3297/files/left_arrow_vibe.svg") 0 0 / 100% no-repeat;
}
.slick-arrow.slick-next {
  right: 50px;
  background: url("https://cdn.shopify.com/s/files/1/0614/1470/3297/files/right_arrow_vibe.svg") 0 0 / 100% no-repeat;
}
.slick-prev:before, .slick-next:before{
    opacity:0 !important;
}
  
</style>

<div id="vibe_carousel" class="vibe_carousel_selection">
 
  {% for collection in collections %}
    
      {% if collection.handle contains 'vibe' %}
        <div class="vibe_class"/>
         <h2 class="ooh_vibe_selection_title gush-font-h1">Select your vibe</h2>

            <img style="position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    z-index: -1;
    object-fit: contain;
    width: 100%;
    height: 100%;" src="{{ collection.featured_image | img_url:"master" }}" >
          
          <a class="collection_button"> {{ collection.title }}</a>
        </div>
  
  {% endif %}
{% endfor %}

</div>




















<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script type="text/javascript">
        jQuery(document).ready(function($){
        $('.vibe_carousel_selection').slick({
          arrow: true,
  infinite: true,
  speed: 300,
  slidesToShow: 1
        });
      });
</script>

{% schema %}
 {
    "name":"OOH Vibe Section",
    "settings":[
        {
            "type":"text",
            "id":"heading",
            "label":"Heading"
        }
    ],
    "blocks":[
        {
            "type":"slide",
            "name":"Slide",
            "settings":[
                {
                    "type":"image_picker",
                    "id":"img",
                    "label":"Image"
                },
              {
"id" : "vibe_collection",
"type" : "collection",
"label" : "collection"
}
            ]
        }
    ],
    "presets":[
        {
            "name":"OOH Vibe Section"
        }
    ]
}
{% endschema %}