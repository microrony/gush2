    },
    {
      "type":"checkbox",
      "id":"group_buy_page",
      "label":"Group buy page",
      "default": false
    },
    {
      "type": "select",
      "id": "page",
      "label": "Page",
      "options": [
        {
          "value": "product",
          "label": "Product"
        },
        {
          "value": "services",
          "label": "Services"
        }
      ],
      "default": "services"
    }
  ],
  "blocks": [
    {
      "name": "Text Block",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "faq_img",
          "label": "Upload an Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "faq_quality",
          "label": "Quality"
        },
        {
          "type": "textarea",
          "id": "faq_ans",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredient Section"
    }
  ]
}
