      "id": "link",
      "label": "Add a link"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Add a button link"
    },
    {
      "type": "text",
      "id": "sb-heading",
      "label": "Sub Title"
    },
    {
      "type": "range",
      "id": "radius",
      "min": 0,
      "max": 60,
      "step": 1,
      "unit": "%",
      "default": 0,
      "label": "Image Radius"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
