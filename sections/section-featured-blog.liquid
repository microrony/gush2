{{ 'component-article-card.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}

<div class="main-blog page-width section-{{ section.id }}-padding">
	<div class="title_search">
	<h1 class="gush-font-h1">{{ section.settings.blog.title }}</h1>
	<form method="get" action="/search">
		<input type="hidden" name="type" value="article" />
		<input type="text" name="q" placeholder="Search" class="gush-font-teritary" />
		<button type="submit">
			 {% render 'icon-search' %}
	</button>
	</form>
</div>

	<div class="blog-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %}">
		{%- for article in section.settings.blog.articles limit: 1 -%}
		<div class="blog-articles__article article">
			{%- render 'main-article-card',
			article: article,
			media_height: article.image.height,
			media_aspect_ratio: article.image.aspect_ratio,
			show_image: true,
			show_date: true,
			show_author: true,
			show_excerpt: true
			-%}
		</div>
		{%- endfor -%}
	</div>
</div>

{% schema  %} 
{
    "name":"Featured blog",
    "settings":[
        {
            "type": "blog",
            "id": "blog",
            "label": "t:sections.featured-blog.settings.blog.label"
        }
    ],
    "presets": [
		{
		    "name": "Featured blog"
		}
	]
}
{% endschema %}