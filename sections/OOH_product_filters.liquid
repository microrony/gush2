  .prev-next-btn-next::before {
    background: url({{ 'arrow-right.svg' | asset_url }}) no-repeat center;
  }
  .prev-next-btn-prev::before {
    background: url({{ 'arrow-left.svg' | asset_url }}) no-repeat center;
