
<link rel="stylesheet" href="{{ 'section-policy-page.css' | asset_url }}" media="print" onload="this.media='all'">


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .footer {
      margin-top: 0 !important;
    }
  }

{%- endstyle -%}

<div class="policy-bg">
  <div class="policy page-width section-{{ section.id }}-padding">
    <div class="rte policy__main">
        <div class="policy__heading"><h1 style="margin-top:{{ section.settings.hdng-margin }}px;">{{ section.settings.heading }}</h1></div>
        <div class="policy__main-content">
            {% for block in section.blocks %}
            <div class="policy__main-wrapper">
            <div class="policy__main-content__heading"><h3>{{ block.settings.heading }}</h3></div>
            <div class="policy__main-content__content">{{ block.settings.content }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "policy",
  "tag": "section",
  "settings": [
    {
       "type": "text",
       "id": "heading",
       "label": "Section Main Heading"
    },
    {
        "type": "range",
        "id": "hdng-margin",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Heading Margin Top",
        "default": 50
      },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks":[
    {
       "name": "Policy Content",
       "type": "text",
      "settings": [
          {
             "type": "text",
             "id": "heading",
             "label": "Content Heading"
          },
          {
            "type": "html",
            "id": "content",
            "label": "Content",
            "info": "Please Write Privacy Policy Content Here."
         }

      ]
    }
  ],
  "presets": [
    {
      "name": "Policy"
    }
  ]
}
{% endschema %}