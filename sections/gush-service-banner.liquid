{% style  %} 
    @media screen and (min-width: 750px){
        .gush-service-banner{
            width: 100%;
            height: 840px;
            /* background-color: #ff42ef; */
            background-image: url("{{ section.settings.bg_image | img_url: '1920x1920', scale: 2 }}");
            background-repeat: no-repeat;
            background-size: cover;
            padding: 210px 0 167px 0;
        }
    }
    .gush-service-banner h4, .gush-service-banner p{
        color: #ffffff !important;
        max-width: 290px;
    }
    .gush-service-banner h3{
        margin: 50px 0 15px 0;
        max-width: 350px;
        color: #ffffff !important;
    }
    .gush-service-banner a{
        margin-top: 110px;
    }
    .gush-service-banner-btn{
        background: #ffffff;
        color: #000000;
    }
    @media screen and (max-width: 750px){
        .gush-service-banner{
            height: 650px;
            background-image: url("{{ section.settings.bg_image_m | image_url : width: 700 , height: 650 }}");
            background-repeat: no-repeat;
            background-size: cover;
            padding: 57px 0 360px 0;
        }
        .gush-service-banner h4, .gush-service-banner p{
            max-width: 180px;
        }
        .gush-service-banner h3{
            margin: 25px 0 10px 0;
            max-width: 200px;
        }
        .gush-service-banner a{
            margin-top: 25px;
        }
    }
{% endstyle %}
<section class="gush-service-banner">
    <div class="page-width">
    <h4 class="gush-font-h4">{{ section.settings.title }}</h4>
    <h3 class="gush-font-h3">{{ section.settings.heading }}</h3>
    <p class="gush-font-p2">{{ section.settings.desc }}</p>
    <a href="{{ section.settings.btn_url}}" class="gush-font-p2 cta-button gush-service-banner-btn">{{ section.settings.btn_txt }} {% render 'arrow-dotted-black' %}</a>
</div>
</section>
{% schema  %} 
{
    "name":"Gush service banner",
    "settings":[
        {
            "type":"image_picker",
            "id":"bg_image",
            "label":"Background image"
        },
        {
            "type":"image_picker",
            "id":"bg_image_m",
            "label":"Responsive Background image"
        },
        {
            "type":"text",
            "id":"title",
            "label":"Title"
        },
        {
            "type":"textarea",
            "id":"heading",
            "label":"Heading"
        },
        {
            "type":"textarea",
            "id":"desc",
            "label":"Description"
        },
        {
            "type":"text",
            "id":"btn_txt",
            "label":"Button label"
        },
        {
            "type":"url",
            "id":"btn_url",
            "label":"Button url"
        }
    ],
    "presets":[
        {
            "name":"Gush service banner"
        }
    ]
}
{% endschema %}