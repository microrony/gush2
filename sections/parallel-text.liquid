<style>

    #parallel_text_container{
        grid-template-columns: 1fr;
    }
    @media screen and (min-width: 750px){
    #parallel_text_container{
        display: grid;
        grid-template-columns: repeat(2,1fr);
    }
    #parallel_text_container h1, p {
        margin: 0;
    }
    .parallel_des p{
        padding-left: 8rem;
    }
    }
</style>
{% style  %}  
    .section-{{ section.id }}-maring{
            margin-top : {{ section.settings.margin_top }}px ;
            margin-bottom : {{ section.settings.margin_bottom }}px ;
        }
    .section-{{ section.id }}-color{
        color: {{ section.settings.color }}
    }
{% endstyle %}
<div class="page-width section-{{ section.id }}-maring" id="parallel_text_container">
    <div>
        <h1 class="gush-font-h1 section-{{ section.id }}-color">{{ section.settings.title}}</h1>
    </div>
    <div class="parallel_des">
        <p class="gush-font-p1">{{ section.settings.description }}</p>
    </div>
</div>

{% schema  %}  
    {
		"name": "Parallel Text",
		"tag": "section",
		"settings": [
            {
                "type": "textarea",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Description"
            },
            
            {
                "type": "color",
                "id": "color",
                "label": "Heading Color",
                "default":"#302112"
            },
            {
                "type": "range",
                "id": "margin_top",
                "min":0,
                "max":150,
                "step": 10,
                "unit": "px",
                "label": "Margin Top",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "min":0,
                "max":150,
                "step": 10,
                "unit": "px",
                "label": "Margin Bottom",
                "default": 0
            }
		],
		"presets": [
            {
                "name": "Parallel Text"
            }
		]
    }
{% endschema %}