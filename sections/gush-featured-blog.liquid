<link rel="stylesheet" href="{{ 'featured-article-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-featured-blog.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'featured-article-card.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 15px;
    padding-bottom: 15px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="blog">
	<div class="page-width section-{{ section.id }}-padding">
		<div class="slider_heading">
        <h2 class="gush-font-h2">{{ section.settings.blog.title | escape }}</h2>
		<div class="slider_nav">
		<div class="featured-blog-prev-{{section.id}} featured-blog-prev">{% render 'icon-arrow-left-gushi' %}</div>
		<div class="featured-blog-next-{{section.id}}">{% render 'icon-arrow-right-gushi' %}</div>
	</div>
	</div>
    {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
			<div class="swiper featured_swiper_gush gush_featured_blog-{{ section.id }}" data-sectionId="{{ section.id }}">
				<div class="swiper-wrapper">
          {%- for article in section.settings.blog.articles -%}
					<div class="swiper-slide" {{ block.shopify_attributes }}>
              {% render 'featured-article-card', blog: section.settings.blog, article: article, media_aspect_ratio: 1.66, show_image: true, show_date: section.settings.show_date, show_author: section.settings.show_author, show_excerpt: true %}
					</div>
			  {% endfor %}
				</div>
			</div>
    {%- else -%}
      <div class="blog-placeholder">
        <div class="placeholder media media--landscape">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
        <div class="blog-placeholder__content">
          <h2>
            {{ 'sections.featured_blog.onboarding_title' | t }}
          </h2>
          <p class="rte-width">
            {{ 'sections.featured_blog.onboarding_content' | t }}
          </p>
        </div>
      </div>
    {%- endif -%}
	</div>
</div>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

