<style>
	.science-hero {
		margin-top: 20px;
	}
	#text-content h1{
	}

	.science-hero h1 {
		margin: 0;
		padding: 0;
	}

	.science-hero p {
		margin-top: 60px;
		max-width: 511px;
	}

	.science-hero .image {
		position: absolute;
		right: 0;
		top: 15rem;
		z-index: -1;
		
	}
	.science-hero #text-content{
		}

	.science-hero .image img {
		width: 470px;
		height: auto;
		object-fit: contain;
	}
	@media screen and (max-width: 990px) {
		.science-hero .image img {
		width: 300px;
		height: auto;
		object-fit: contain;
	}
	.science-hero #text-content{
			max-width: 50%;
		}
	.science-hero h1 {
		font-size: 64px !important;
	}
	}

	@media screen and (max-width: 750px) {
		.science-hero {
			display: flex;
			position: relative;
			overflow: hidden;
			margin-top: 0;
			padding-bottom: 2.5rem !important;
			padding-top: 50px !important;
		}
		.science-hero #text-content{
			max-width: 88%;
		}
		.science-hero h1 {
		font-size: 48px !important;
		}
		.science-hero p {
		margin-top: 1.5rem;
	}

		.science-hero .image {
		top: 2rem;
		right: -70px;
		overflow: hidden;
	}

		.science-hero .image img {
			width: 115px;
	}
	}
	
</style>
{% style  %} 
@media screen and (min-width: 1050px){
{% if section.settings.page_name == "Window_film_science" %} 
	#text-content h1{
		font-size:  140px !important;
	}
	.science-hero p {
		margin-top: 35px;
	}
 {% endif %}
}
{% endstyle %}
	{% assign img_url = "science_top.svg" | asset_url %}
	<div class="science-hero gush-page-width">
	<div id="text-content">
		<h1 class="gush-font-display">{{ section.settings.title }}</h1>
		<p class="gush-font-p1">{{ section.settings.description }}</p>
	</div>
	<div class="image">
		<img src="{{img_url}}" alt="">
		{%- comment -%} {{ section.settings.image | image_url: width: 640 | image_tag }} {%- endcomment -%}

	</div>
	</div>


	{% schema %}
	{
		"name": "Science Hero",
		"tag": "section",
		"settings": [
		{
		"type": "textarea",
		"id": "title",
		"label": "Title"
		},
		{
			"type": "textarea",
			"id": "description",
			"label": "Description"
			},
			{
				"type": "image_picker",
				"id": "image",
				"label": "Image"
			},
			{
				"type": "select",
				"id": "page_name",
				"label": "Select page name",
				"options": [
					{
					"value": "Window_film_science",
					"label": "Window film science"
					},
					{
					"value": "science",
					"label": "Science"
					}
				],
				"default": "science"
			}
		],
		"presets": [
		{
		"name": "Science Hero"
		}
		]
		}
	{% endschema %}