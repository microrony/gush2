<style>
	.science-hero {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		margin-top: 20px;
	}

	.science-hero h1 {
		margin: 0;
		padding: 0;
	}

	.science-hero p {
		max-width: 511px;
	}

	.science-hero .image {
		position: absolute;
		right: 0;
		top: 15rem;
		z-index: -1;
	}

	.science-hero .image img {
		width: 500px;
		height: auto;
		object-fit: contain;
	}

	@media screen and (max-width: 750px) {
		.science-hero {
      padding-top: 50px !important;
		}

		.science-hero .image {
		top: 10rem;
		right: 0px;
	}

		.science-hero .image img {
			width: 140px;
	}
	}
</style>


<div class="science-hero gush-page-width">
	<div>
		<h1 class="gush-font-display">{{ section.settings.title }}</h1>
		<p class="gush-font-p1">{{ section.settings.description }}</p>
	</div>
	<div class="image">
		{{ section.settings.image | image_url: width: 640 | image_tag }}
	</div>
</div>


	{% schema %}
	{
		"name": "Science Hero",
		"tag": "section",
		"settings": [
		{
		"type": "text",
		"id": "title",
		"label": "Title"
		},
		{
			"type": "textarea",
			"id": "description",
			"label": "Description"
			},
			{
				"type": "image_picker",
				"id": "image",
				"label": "Image"
			}
		],
		"presets": [
		{
		"name": "Science Hero"
		}
		]
		}
	{% endschema %}