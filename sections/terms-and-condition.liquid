
<link rel="stylesheet" href="{{ 'section-terms-page.css' | asset_url }}" media="print" onload="this.media='all'">


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.30 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}

<div class="terms-bg">
  <div class="terms page-width section-{{ section.id }}-padding">
    <div class="terms__main">
        <div class="terms__heading"><h1 class="gush-font-h1">{{ section.settings.heading }}</h1></div>
				<div class="terms_secondary__heading"><p class="gush-font-p2">{{ section.settings.secondary-heading }}</p></div>
        <div class="terms__main-content">
            {% for block in section.blocks %}
            <div class="terms__main-wrapper">
            <div class="terms__main-content__heading"><h3 class="gush-font-p1">{{ block.settings.heading }}</h3></div>
            <div class="terms__main-content__content">{{ block.settings.content }}</div>
            </div>
            {% endfor %}
        </div>
				{%- comment -%} <ol>
					<li>sunt in culpa qui officia,</li>
					<li>deserunt mollit anim id est laborum.</li>
			</ol>
			<ol>
				<li>Quis nostrud exercitation.</li>
				<li>Ullamco laboris nisi ut.
				
		</ol> {%- endcomment -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Terms and Condition",
  "tag": "section",
  "settings": [
    {
       "type": "textarea",
       "id": "heading",
       "label": "Section Main Heading"
    },
		{
       "type": "textarea",
       "id": "secondary-heading",
       "label": "Section Secondary Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks":[
    {
       "name": "Terms Content",
       "type": "text",
      "settings": [
          {
             "type": "text",
             "id": "heading",
             "label": "Content Heading"
          },
          {
            "type": "html",
            "id": "content",
            "label": "Content",
            "info": "Please Write Terms and Condition Content Here."
         }

      ]
    }
  ],
  "presets": [
    {
      "name": "Terms and Condition"
    }
  ]
}
{% endschema %}