<div class="section-{{ section.id }}-padding">
  {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
    {{ 'component-facets.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

    <div
      class="gush-page-width"
      id="main-collection-filters"
      data-id="{{ section.id }}">
      <div class="collection-tabs collection-tabs__gush">
        {%- comment -%} {% for item in section.settings.collectionList.links %}
        <div class="collection-tabs__name gush-font-p1">{{- item.title | escape -}}</div>

        <!--         <div class="collection-tabs__name"></div> -->
        {% endfor %} {%- endcomment -%}
        {% for block in section.blocks %}
          {% if block.type == 'text_block' %}
            <div class="collection-tabs__name gush-font-p1">{{ block.settings.tab_title }}</div>
          {% endif %}
        {% endfor %}
      </div>

      {% render 'facets', results: collection, enable_filtering: section.settings.enable_filtering, enable_sorting: section.settings.enable_sorting, collapse_on_larger_devices: section.settings.collapse_on_larger_devices %}

    </div>
  {%- endif -%}

  <div id="ProductGridContainer">
    {%- paginate collection.products by section.settings.products_per_page -%}
      {{ content_for_header }}
      {%- if collection.products.size == 0 -%}
        <div
          class="collection collection--empty gush-page-width"
          id="product-grid"
          data-id="{{ section.id }}">
          <div class="loading-overlay gradient"></div>
          <div class="title-wrapper center">
            <h2 class="title title--primary">
              {{ 'sections.collection_template.empty' | t }}<br>
              {{ 'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: "underlined-link link" }}
            </h2>
          </div>
        </div>
      {%- else -%}
        <div class="collection gush-page-width" paginate-data="{{ section.settings.products_per_page }}">
          <div class="loading-overlay gradient"></div>

          <ul
            id="product-grid"
            data-id="{{ section.id }}"
            class=" grid product-grid product-grid__gush grid--{{ section.settings.columns_mobile }}-col-tablet-down {% if section.settings.columns_desktop == 1 %} grid--full-width{% else %} grid--{{ section.settings.columns_desktop }}-col-desktop {% endif %} event-container">
            {% assign counter = 0 %}
            {%- for product in collection.products -%}
              {% if counter == section.settings.ad_product_count %}
                <div class="collectionBannerInner" style="background-color:{{ section.settings.bg_color }};">
                  <div class="collectionBannerInner__img"><img src="{{ section.settings.bg_img | img_url: 'medium'}}" alt="BG Image"></div>
                  <div class="collectionBannerInner__content">
                    <h2 class='gush-font-h3'>
                      <a class="full-unstyled-link" href="{{ section.settings.url }}">{{ section.settings.heading }}</a>
                    </h2>
                    <p class="gush-font-p1">
                      <a class="full-unstyled-link" href="{{ section.settings.url }}">{{ section.settings.content }}</a>
                    </p>
                    <a class="full-unstyled-link" href="{{ section.settings.url }}">{% render 'icon-arrow-right' %}</a>

                  </div>
                </div>
                <li class="grid__item">
                  {% render 'card-product' 
                   , card_product: product,
                   media_aspect_ratio: section.settings.image_ratio,
                   show_secondary_image: section.settings.show_secondary_image,
                   show_vendor: section.settings.show_vendor,
                   show_rating: section.settings.show_rating,
                   lazy_load: lazy_load,
                   styles: "collection-page_product" %}
                </li>
              {% else %}

                {% assign lazy_load = false %}
                {%- if forloop.index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}
                <li class="grid__item">
                  {% render 'card-product' 
                   , card_product: product,
                   media_aspect_ratio: section.settings.image_ratio,
                   show_secondary_image: section.settings.show_secondary_image,
                   show_vendor: section.settings.show_vendor,
                   show_rating: section.settings.show_rating,
                   lazy_load: lazy_load,
                   styles: "collection-page_product" %}
                </li>
              {% endif %}
              {% assign counter = counter | plus: 1 %}

            {%- endfor -%}

          </ul>

          {%- if paginate.pages > 1 -%}
            {% render 'pagination', paginate: paginate, anchor: '' %}
          {%- endif -%}
        </div>
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>
<script>
  const accessToken = "0e59226f7349d1302e2b493ec3e45c59";
  async function apiCall(query) {
    const response = await fetch('https://gush2.myshopify.com/api/graphql.json', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/graphql',
        'X-Shopify-Storefront-Access-Token': accessToken
      },
      "body": query
    })
    const data = await response.json()
    return data.data.products.edges;
  }

  const query = `{
  products(first: 100){
    edges{
      node{
        title
        tags
        handle
        metafields(first: 10) {
                    edges{
                        node {
                            namespace
                            key
                            value
                        }

                    }
                }
        images(first: 1){
          edges{
            node{
              altText transformedSrc(maxWidth: 400, maxHeight: 400)
            }
          }
        }
      }
    }
  }
}`

  const sorted_product = apiCall(query).then((d) => {

    const products = d;
    let brightnessA;
    let brightnessB;

// product array sort by product metafield 
    products.sort((a, b) => {
      brightnessA = 999
      brightnessB = 999
      const metafieldsA = a.node ?. metafields ?. edges;
      metafieldsA.forEach(metafield => {
        if (metafield.node.namespace == "product") {
          brightnessA = parseInt(metafield.node.value);
        }
      })
      const metafieldsB = b.node ?. metafields ?. edges;
      metafieldsB.forEach(metafield => {
        if (metafield.node.namespace == "product") {
          brightnessB = parseInt(metafield.node.value);
        }
      })

      if (brightnessA > brightnessB) {
        return 1
      } else if (brightnessA < brightnessB) {
        return -1
      }
      return 0
    })
    return products

  })

// all product not shorted
