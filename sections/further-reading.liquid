{{ "further-reading.css" | asset_url | stylesheet_tag }}
{% style  %} 
.background-{{ section.id }}{
    background: {{ section.settings.bg_color }} ;
}
.section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px ;
        padding-bottom: {{ section.settings.padding_bottom }}px ;
    }
{% endstyle %}
<section class="background-{{ section.id }}">
    <div class="page-width section-{{ section.id }} further-reading-main">
    <div class="further-reading-top">
        <p class="gush-font-p1 further-reading-title">{{ section.settings.title }}</p>
        <p class="further-swipe-next">{% render 'arrow-dotted-black' %}</p>
    </div>
    {% if section.settings.blogs.articles_count <= 0 %} 
        <p class="gush-font-p2">There is no articles in {{ section.settings.blogs.title }} category !</p>
    {% endif %}
    <div>
    <div class="swiper further-reading-swiper">
        <div class="swiper-wrapper">
            {% for article in section.settings.blogs.articles limit: section.settings.article_limit %} 
            <div class="swiper-slide">
            <div class="further-reading-card">
                <p class="gush-font-p2"> {{ section.settings.blogs.title }}</p>
                <h3 class="gush-font-h3">
                <a href="{{ article.url }}" class="full-unstyled-link">
                    {{ article.title }}
                </a>
                </h3>
                <p class="gush-font-p2 further-reading-pub_date">{{ article.published_at | date: "%m.%d.%y" }}</p>
                
            </div>
            </div>
            {% endfor %}
        </div>
    </div>
    </div>
</div>
</section>
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <!-- Initialize Swiper -->
    <script>
      var swiper2 = new Swiper(".further-reading-swiper", {
        spaceBetween: 40,
        slidesPerView: 2,
        breakpoints: {
          300: {
            slidesPerView: 1,
          },
          750: {
            slidesPerView: 2,
          }
        },
        navigation: {
          nextEl: ".further-swipe-next",
          prevEl: ".further-swipe-prev"
        }
      });
    </script>
{% schema  %} 
{
    "name":"further reading",
    "settings":[
        {
            "type":"text",
            "id":"title",
            "label":"Title"
        },
        {
            "type": "blog",
            "id": "blogs",
            "label": "t:sections.featured-blog.settings.blog.label"
        },
        {
            "type": "range",
            "id": "article_limit",
            "min": 2,
            "max": 10,
            "step": 1,
            "default": 2,
            "label": "Article limit"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Section background color",
            "default": "#00ff00"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 140,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
            },
            {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 140,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
            }
    ],
    "presets":[
        {
            "name":"Further reading"
        }
    ]
}
{% endschema %}